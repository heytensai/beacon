            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity" android:label="@string/settings"/>
        <activity android:name=".MapActivity" android:label="Map"/>
        <activity android:name=".ClueActivity" android:label="Clues"/>
        <activity android:name=".InfoActivity" android:label="Info"/>
        <activity android:name=".LocationActivity" android:label="Location"/>
        <activity android:name=".SubjectsActivity"/>
        <activity android:name=".SubjectDetailActivity"/>
    </application>
    <uses-sdk android:minSdkVersion="3"/>
</manifest> 
