<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="apikey"
        android:title="@string/settings_apikey"
        android:singleLine="true"
        />
    <CheckBoxPreference
        android:key="usegps"
        android:title="@string/settings_usegps"
        android:summary="@string/settings_usegps_summary"
        android:defaultValue="true"
        />
    <CheckBoxPreference
            android:key="sendGpsUpdates"
            android:title="@string/settings_sendGpsUpdates"
            android:summary="@string/settings_sendGpsUpdates_summary"
            android:defaultValue="true"
            />
    <ListPreference
        android:key="gpsUpdateInterval"
        android:title="@string/settings_gpsupdateinterval"
        android:summary="@string/settings_gpsupdateinterval_summary"
        android:defaultValue="60000"
        android:entries="@array/gpsUpdateInterval"
        android:entryValues="@array/gpsUpdateIntervalValues"
        />
    <ListPreference
            android:key="missionFontSize"
            android:title="@string/settings_missionFontSize"
            android:summary="@string/settings_missionFontSize_summary"
            android:defaultValue="@string/settings_missionFontSize_default"
            android:entries="@array/missionFontSize"
            android:entryValues="@array/missionFontSizeValues"
            />
</PreferenceScreen>